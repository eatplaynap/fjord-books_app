<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @report.body %>
</p>

<p>
  <strong>Comments: </strong>
  <% @report.comments.each do |comment| %>
    <%= comment.body %>
    <%= comment.user.name %>
    <%# if comment.user.name.empty? %>
      <%#= comment.user.email %>
    <%# else %>
      <%#= comment.user.name %>
    <%# end %>
    <%= comment.created_at %>
  <% end %>
</p>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
