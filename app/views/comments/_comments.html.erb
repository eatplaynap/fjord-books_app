<p>
  <strong><%= Comment.model_name.human %>: </strong>
  <% commentable.comments.each do |comment| %>
    <br>
    <%= comment.body %>
    <% if comment.user.name.empty? %>
      <%= comment.user.email %>
    <% else %>
      <%= comment.user.name %>
    <% end %>
    <%= comment.created_at.to_s(:datetime_jp) %>
    <% if current_user == comment.user %>
      <td><%= link_to t('views.common.destroy'), "/#{comment.commentable.class.name.downcase}s/#{comment.commentable.id}/comments/#{comment.id}", method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
    <% end %>
  <% end %>
</p>
